# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
# indent_style = tab

[{*.yaml,*.yml}]
indent_size = 2

[Makefile]
# indent_style = tab
max_line_length = 120
